/* pages/search/search.wxss */
 .search{
  width:100%; 
  height: 100rpx;
  background-size: 100% 100%;
  padding-top: 50rpx;
} 
.search input{
  margin-left: 5%;  
  width: 87%;
  height: 70rpx;
  line-height: 70rpx;
  /* margin: 30rpx 5%; */
  background: #fff;
  border-radius: 3px;
  color: #929292;
  padding-left: 20rpx;
  
}
.phcolor{
  font-size: 34rpx;
  padding-left: 90rpx;
}
.nav {
  margin-top:40rpx;
  display: flex;
  border-bottom: 1px solid #d1d3d4;
  background: #fff;
}

.nav-son {
  display: flex;
  flex: 1;
  text-align: center;
  height: 40px;
  align-items: center;
  justify-content: center;
  font-size: 14px;
}
.content {
  display: inline-block;
}
.icon {
  display: inline-block;
  border: 4px solid transparent;
  border-top: 4px solid #9b9b9b;
  margin-left: 5px;
}
.content1{
  margin-top: 20rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  height: 300rpx;
}
.content1 .box{
  padding:20rpx;
  font-size: 30rpx;
  color: #888;
  border-bottom: 1px #eee solid;
}
.content1 .box .title{
  color: #000;
  font-size: 32rpx;  
}
.content1 .box .text{
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
}
.content1 .box .text text{
  width:80%;
}
.content1 .box .text image{
  width: 54rpx;
  height: 54rpx;
}